#!/bin/bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Setup PHP ini.
#======================================================================================================================

php-get-ini
php-setup-ini


#======================================================================================================================
# Execute PHP.
# See https://github.com/docker-library/php/blob/master/8.0/alpine3.14/cli/docker-php-entrypoint
#======================================================================================================================

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
    set -- php "$@"
fi

cd /ws
exec "$@"

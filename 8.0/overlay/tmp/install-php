#!/usr/bin/nu

use bf

# Install PHP $version
def main [
    version: string
] {
    # install packages
    bf pkg install [
        $"php8=($version)"
        $"php8-common=($version)"
    ]

    # create symlinks so PHP can be called on the commandline using php and php-fpm
    let php = "/usr/bin/php"
    let fpm = "/usr/sbin/php-fpm"
    if ($php | path type) != "symlink" { ^ln -sf /usr/bin/php8 $php }
    if ($fpm | path type) != "symlink" { ^ln -sf /usr/sbin/php-fpm8 $fpm }
}
